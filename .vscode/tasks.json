{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "gcc debug build active file - with GTK",
			"command": "/usr/bin/gcc",
			"args": [
				"${fileDirname}/*.c",
				"-g",
				"-xc",
				"-std=c11",
				"-Wall",
				"-Wextra",
				"-Werror",
				"-Wno-unused-parameter",
				"-Wno-unused-function",
				"-lm",
				"`pkg-config", "--cflags", "gtk+-3.0`",
				"`pkg-config", "--libs", "gtk+-3.0`",
				"-o",
				"${fileDirname}/main",
			],
			"options": {
				"cwd": "/usr/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "shell",
			"label": "runB",
			"detail": "Run B program",
			"command": "${fileDirname}/main",
			"args": [
				"B"
			],

		}
	]
}